<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFF58734" />
            <gradient android:angle="-90" android:endColor="#FFF58734" android:startColor="#FFF58734" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFF58734" />
            <solid android:color="#FFF58734" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp" />
            <stroke android:width="1dip" android:color="@color/orange_light" />
            <gradient android:angle="-90" android:endColor="@color/orange_light" android:startColor="@color/orange_light" />
        </shape>
    </item>
</selector>