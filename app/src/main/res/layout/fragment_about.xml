<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/overview_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Company Overview"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/overview_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/overview_textview"
                android:layout_margin="10dp"
                app:cardCornerRadius="9dp"
                app:cardElevation="7dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="380dp"
                        android:src="@drawable/overview" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:justificationMode="inter_word"
                        android:text="    JKV Architectural products are a manufacturing and supplying Premium range of architectural hardware, bath accessories, furniture and glass fittings under the brand name of JKV. We have provides complete solution to residential and commercial structures. JKV is a provider of an exclusive product range that includes Mortise Handles, Mortise pin cylinder, Mortise lock body, Cylindrical locks, Furniture locks, Pull handles, Door hinges, Clip on hinges, Telescopic Channels, Bathroom Accessories, Door Closers, Floor Springs, Glass Patch Fittings, Glass sliding system, Glass door locks, Shower Fittings, Shower Hinges, Spider Fittings, Shower Sliding System, Stainless steel Railings and Balustrades system and Aluminum Railing system. We are committed to partnering with its stakeholders for providing end-to-end architectural hardware products to the Architects, Builders, Interior Decorators, Corporate Houses, Government Contractors, and many others in the domain of residential and commercial projects."
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/overview_cardview"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_below="@+id/overview_cardview"
                        android:layout_margin="10dp"
                        android:elevation="6dp"
                        android:padding="10dp"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Our Mission"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_marginTop="10dp"
                                android:justificationMode="inter_word"
                                android:text="We aim to continue to build long-term relationships with our customers by providing exceptional customer services."
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_below="@+id/overview_cardview"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Our Vision"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="6dp"
                                android:justificationMode="inter_word"
                                android:text="To provide high quality design and services to our clients with honesty and integrity."
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>